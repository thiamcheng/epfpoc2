<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <route id="simple-route">
            <from id="_to1" uri="netty4-http:http:0.0.0.0:9800/epfuse2"/>
            <log id="route-log2" message=">>> Coming into into epfuse2 : ${body}"/>
            <setHeader headerName="Content-Type" id="_setHeader1">
                <constant>application/json</constant>
            </setHeader>
            <to id="_to2" uri="netty4-http:http:0.0.0.0:1880/epfb02"/>
            <log id="route-log" message=">>> Going into  EPFB02 : ${body}"/>
        </route>
    </camelContext>
</beans>
